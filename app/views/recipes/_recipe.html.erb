<div id="<%= dom_id recipe %>">
  <p>
    <strong>Title:</strong>
    <%= recipe.title %>
  </p>

  <p>
    <strong>Instructions:</strong>
    <%= recipe.instructions %>
  </p>

  <p>
    <strong>Prep time:</strong>
    <%= recipe.prep_time %>
  </p>

  <p>
    <strong>Cook time:</strong>
    <%= recipe.cook_time %>
  </p>

  <p>
    <strong>Is private:</strong>
    <%= recipe.is_private %>
  </p>

  <p>
    <strong>Calories:</strong>
    <%= recipe.calories %>
  </p>

  <div>
    <p><strong>Tags</strong></p>
    <% if recipe.tags.any? %>
      <p>
        <% recipe.tags.each do |tag| %>
          <span class="recipe-tag">
            <%= tag.name %>
          </span>
        <% end %>
      </p>
    <% end %>
  </div>

</div>
